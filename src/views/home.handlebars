<link rel="stylesheet" href="/css/style.css">

<body data-cart="{{cartId}}">

<div class="container">
    <h2>Bienvenido</h2>
<h3>Productos disponibles</h3>

<p>Cart ID: {{user.cart}}</p>

<ul>
    {{#each products}}
    <li>
        <strong>{{this.name}}</strong> - ${{this.price}} - Stock: {{this.stock}}
        {{#if ../user.cart}}
        <button class="add-to-cart" data-pid="{{this._id}}" data-cid="{{../user.cart}}">Agregar al carrito</button>
        {{else}}
        <p>No se encontr√≥ el carrito del usuario.</p>
        {{/if}}
    </li>
    {{/each}}
</ul>

<a href="/cart">Ir al carrito</a>
</div>
</body>

<script src="/js/index.js"></script>